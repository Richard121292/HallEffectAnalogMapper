<Window x:Class="MchoseConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MchoseConfigurator"
        mc:Ignorable="d"
        Title="MCHOSE STUDIO PRO UI" Height="720" Width="1180" Background="#0d1117">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.ColumnSpan="2" Background="#161b22" Padding="16" CornerRadius="6">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <TextBlock Text="âŒ¨ï¸ MCHOSE STUDIO PRO" Foreground="#58a6ff" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="  UI" Foreground="#8b949e" FontSize="14" Margin="6,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Button x:Name="ConnectButton" Content="ðŸ”Œ Conectar" Width="140" Height="34" Background="#3fb950" Foreground="White" Click="ConnectButton_Click" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusText" Text="Desconectado" Foreground="#f85149" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="ModeText" Text="" Foreground="#8b949e" VerticalAlignment="Center"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Keyboard + monitor -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Background="#161b22" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                <ScrollViewer>
                    <ItemsControl x:Name="KeyboardGrid">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="40" ItemHeight="40" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:KeyboardKey KeyId="{Binding Id}" Display="{Binding Label}" IsActive="{Binding IsActive}" IsSelected="{Binding IsSelected}" MouseLeftButtonUp="KeyboardKey_MouseLeftButtonUp" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <Border Grid.Row="1" Background="#161b22" CornerRadius="6" Padding="10">
                <StackPanel>
                    <TextBlock Text="Monitor en vivo" Foreground="#c9d1d9" FontWeight="Bold" FontSize="14"/>
                    <local:MonitorBar x:Name="RtBar" Title="RT (Gas)" BarColor="#3fb950" />
                    <local:MonitorBar x:Name="LtBar" Title="LT (Freno)" BarColor="#f85149" />
                    <local:MonitorBar x:Name="LxBar" Title="LX" BarColor="#58a6ff" Centered="True" />
                    <local:MonitorBar x:Name="LyBar" Title="LY" BarColor="#58a6ff" Centered="True" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- Right panel: mapping and sliders -->
        <Border Grid.Row="1" Grid.Column="1" Background="#161b22" CornerRadius="6" Padding="12" Margin="0,10,10,10">
            <StackPanel>
                <TextBlock Text="ConfiguraciÃ³n de tecla" Foreground="#c9d1d9" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                <TextBlock x:Name="SelectedKeyText" Text="Selecciona una tecla" Foreground="#d29922" Margin="0,0,0,4"/>
                <ComboBox x:Name="ActionCombo" IsEnabled="False" SelectionChanged="ActionCombo_SelectionChanged" />
                <Button Content="Guardar mapping" Margin="0,8,0,12" Click="SaveMapping_Click" />

                <Separator Margin="0,8"/>
                <TextBlock Text="Ajustes" Foreground="#c9d1d9" FontWeight="Bold"/>
                <StackPanel Margin="0,4">
                    <local:LabeledSlider x:Name="DeadzoneSlider" Title="Zona muerta" Minimum="0" Maximum="150" Margin="0,0,0,6"/>
                    <local:LabeledSlider x:Name="SensitivitySlider" Title="Sensibilidad" Minimum="0.5" Maximum="3.0" Margin="0,0,0,6"/>
                    <local:LabeledSlider x:Name="MaxPressureSlider" Title="PresiÃ³n mÃ¡xima" Minimum="200" Maximum="1000"/>
                </StackPanel>

                <Separator Margin="0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <Button Content="Detectar (raw)" Click="DetectRaw_Click" Margin="0,0,8,0" />
                    <Button Content="Borrar mapeos" Click="ClearMappings_Click" />
                </StackPanel>
                <CheckBox x:Name="AnalogOnlyCheck" Content="Solo analÃ³gico (ignorar HID teclado)" Foreground="#c9d1d9" Margin="0,4,0,0" Checked="AnalogOnlyCheck_Checked" Unchecked="AnalogOnlyCheck_Checked"/>
                <TextBlock x:Name="DebugText" Foreground="#8b949e" FontSize="11" TextWrapping="Wrap" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
