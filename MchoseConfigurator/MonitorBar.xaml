<UserControl x:Class="MchoseConfigurator.MonitorBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="36" MinWidth="200">
    <StackPanel>
        <DockPanel>
            <TextBlock x:Name="TitleText" DockPanel.Dock="Left" Foreground="#8b949e"/>
            <TextBlock x:Name="ValueText" DockPanel.Dock="Right" Foreground="#c9d1d9"/>
        </DockPanel>
        <ProgressBar x:Name="Bar" Height="6" Minimum="0" Maximum="1" Value="0" />
    </StackPanel>
</UserControl>
