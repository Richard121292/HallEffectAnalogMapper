<UserControl x:Class="MchoseConfigurator.LabeledSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="56">
    <StackPanel>
        <DockPanel>
            <TextBlock x:Name="TitleText" DockPanel.Dock="Left" Foreground="#c9d1d9"/>
            <TextBlock x:Name="ValueText" DockPanel.Dock="Right" Foreground="#58a6ff"/>
        </DockPanel>
        <Slider x:Name="Slider" Minimum="0" Maximum="1" ValueChanged="Slider_ValueChanged"/>
    </StackPanel>
</UserControl>
